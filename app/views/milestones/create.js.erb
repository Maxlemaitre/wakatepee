<% if @milestone.errors.any? %>
  // Render new review form with errors
  $('#milestone_title').html("<%= j render 'shared/create_milestone', milestone: @milestone %>");
  <% else %>
  var new_milestone = $("<%= j render 'project/show', milestone: @milestone %>").hide();
  $(".li-milestone tab").append(new_milestone)
  new_milestone.slideDown();
<% end %>
