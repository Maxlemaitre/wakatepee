<% if @project.errors.any? %>
  $('#new_project').html("<%= j render 'shared/create-project', project: @project %>").
    find("input.date_picker").datepicker({
      format: "yyyy/mm/dd",
      autoclose: true
    });
<% else %>
  window.location = '<%= project_path(@project) %>';
<% end %>
